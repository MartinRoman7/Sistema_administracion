                <div class="bottom-buffer" style="margin-left: 8px; margin-top: 50px;">
                        <h1>Registro</h1>
                </div>
                
                <form role="form" action="/registro" method="POST">
                    <input type="hidden" name="option" value="credential">
                    <div class="form-group">
                            <div class="col-sm-8">
                                <input class="form-control" id="name" placeholder="Nombre" type="text" name="name" size="25" value="" onblur="javascript:this.value = this.value.toUpperCase();" autocomplete="off" style="border-color: rgb(204, 204, 204);">
                                <!-- <span id="msgErrorRfc" style="color: red; font-size: 11px; font-weight: initial;">Este campo es obligatorio.</span> -->
                            </div>
                    </div>

                    <div class="form-group">
                            <div class="col-sm-8">
                                <input class="form-control" id="password" placeholder="Contraseña" type="password" name="password" size="25" maxlength="16" autocomplete="off" style="border-color: rgb(204, 204, 204);">
                                <!-- <span id="msgErrorRfc" style="color: red; font-size: 11px; font-weight: initial;">Este campo es obligatorio.</span> -->
                            </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8">
                            <input class="form-control" id="passwordA" placeholder="Contraseña nuevamente" type="password" name="passwordA" size="25" maxlength="16" autocomplete="off" style="border-color: rgb(204, 204, 204);">
                            <!-- <span id="msgErrorRfc" style="color: red; font-size: 11px; font-weight: initial;">Este campo es obligatorio.</span> -->
                        </div>
                    </div>

                    <div class="clearfix">
                        <div class="pull-right">
                            <input class="btn btn-success" type="submit" value="Aceptar" style="float: right;">
                        </div>
                    </div>

                    <div class="row" style id="divMsgError">
                    
                        <div class="col-sm-12">
    
                            <% if(mensaje.length != 0) {%>
                                <div class="alert">
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                                    <strong><%= mensaje %></strong>
                                </div>
                            <% } %>
                            
                        </div>
                    </div>
                </form>    

            </div>
        </div>
